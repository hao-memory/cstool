{
  "root": true,
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "rules": {
    "no-console": [0],
    "space-before-function-paren": 0,
    "max-len": 0,
    // 不对数组或对象末尾逗号做强制要求
    "comma-dangle": [1, "never"],
    // 不对注释前的空格做强制要求
    "spaced-comment": [0, "always"],
    // 允许使用匿名函数,
    "func-names": 0,
    // 控制逗号前后的空格
    "comma-spacing": [2, { "before": false, "after": true }],
    // 双峰驼命名格式
    "camelcase": 2,
    //大括号内是否允许不必要的空格
    "object-curly-spacing": [0, "never"],
    //允许
    "global-require":0,
    "prefer-arrow-callback":0,
    "class-methods-use-this":0
  },
  "env":{
    "node": true
  }
}

